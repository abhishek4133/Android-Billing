<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MatchLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="match_parent_layout" >
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="WrapLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="ToolBar" parent="match_parent_layout">
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="MenuDropDown">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="header_action_bar" parent="WrapLayout">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/header1</item>
        <item name="android:textSize">20sp</item>
    </style>


</resources>